  (_def intervalfn @{ 
    let i = 0;
    $return (function (arg) {
      if (arg !== null && arg !== undefined) i++;
      if (i===args[0]) {
        i = 0;
        return arg;
      }
      return null;
    });
  }@ )

  (_def interval-stream (_fn (interval stream) (_stream (_fx (intervalfn interval) ) (stream) ) ) )

  




